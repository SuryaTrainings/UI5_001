<mvc:View xmlns:control="sap.gantt.control"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" controllerName="st.b33.simpleApp.controller.view1">
    <Page title="Screen - 1 / view - 1">
        <!-- <Button text="Go to next screen - 2 / view - 2" press="onNext"></Button> -->
        <headerContent>
            <Button icon="sap-icon://forward" press="onNext"></Button>
        </headerContent>
        <SearchField search="onSearch"></SearchField>
        <List id="idList" items="{/Fruits}">
            <items>
                <ObjectListItem 
                    title="{name}"
                    intro="{type}"
                    number="{price}"
                    numberUnit="{unit}"
                    icon="{image}"></ObjectListItem>
            </items>
        </List>
    </Page>
</mvc:View>
<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <HBox>
        <Select items="{/Cities}">
            <core:Item key="{CityName}" text="{CityName}">
            </core:Item>
        </Select>
        <ComboBox items="{/Cities}">
            <core:Item key="{CityName}" text="{CityName}">
            </core:Item>
        </ComboBox>
    </HBox>
    <MultiComboBox items="{/Cities}">
        <core:Item key="{CityName}" text="{CityName}">
        </core:Item>
    </MultiComboBox>
</core:FragmentDefinition>